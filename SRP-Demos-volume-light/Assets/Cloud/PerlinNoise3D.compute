#pragma kernel GenNoise

#include "PerlinNoise.hlsl"

RWTexture3D<float> OutputTexture;
float3 OutputSize;
float Scale;
int Iteration;
float Seed;

[numthreads(8,8,8)]
void GenNoise (uint3 id : SV_DispatchThreadID)
{
    OutputTexture[id.xyz] = perlinNoiseFBM(id.xyz / Scale, Iteration, OutputSize / Scale, Seed);
}
